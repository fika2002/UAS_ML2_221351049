<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <!-- Judul Aplikasi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="Prediksi Harga Tiket "
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Logo Aplikasi -->
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:tint="@color/purple_700"/>

    <!-- Menu Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_card"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTentang"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tentang Aplikasi"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:icon="@drawable/ic_info"
            app:iconTint="@color/purple_700"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFitur"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Fitur"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:icon="@drawable/ic_feature"
            app:iconTint="@color/purple_700"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArsitektur"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Arsitektur Model"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:icon="@drawable/ic_architecture"
            app:iconTint="@color/purple_700"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimulasi"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Mulai Simulasi"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_700"
            app:icon="@drawable/ic_play"
            app:iconTint="@color/white"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <!-- Footer -->
</LinearLayout>